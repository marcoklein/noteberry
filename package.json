{
  "name": "noteberry",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn build && yarn bootstrap",
    "build": "lerna run build --ignore @deployment/*",
    "deploy:docs": "yarn build && yarn bootstrap && lerna run --scope @deployment/docs deploy:docs"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}

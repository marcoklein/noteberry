{
  "name": "codemirror6-block-indentation",
  "description": "Playground project for code mirror 6.",
  "keywords": [
    "code-mirror-6",
    "TypeScript",
    "ESM"
  ],
  "version": "0.4.0",
  "author": {
    "name": "Marco Klein"
  },
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "yarn generate:version && parcel build src/index.html --public-url .",
    "deploy": "yarn build && gh-pages -d ./dist",
    "test": "mocha --loader=ts-node/esm src/**/*.spec.ts --experimental-specifier-resolution=node",
    "test:watch": "nodemon --exec \"yarn test\" --watch src -e js,ts",
    "parcel": "parcel",
    "generate:version": "genversion src/version.gen.ts --es6",
    "postinstall": "yarn generate:version"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "genversion": "^3.0.2",
    "gh-pages": "^3.2.3",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "parcel": "^2.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/stream-parser": "^0.19.3",
    "@codemirror/text": "^0.19.5",
    "@replit/codemirror-vim": "^0.19.0"
  }
}

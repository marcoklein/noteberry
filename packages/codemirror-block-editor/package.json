{
  "name": "codemirror6-block-indentation",
  "description": "Playground project for code mirror 6.",
  "keywords": [
    "code-mirror-6",
    "TypeScript",
    "ESM"
  ],
  "version": "0.5.0",
  "author": {
    "name": "Marco Klein"
  },
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "start": "parcel src/index.html",
    "test": "yarn test:build && karma start karma.conf.cjs",
    "test:watch": "nodemon --exec \"yarn test\" --watch src --watch tests -e js,ts",
    "test:build": "rimraf dist-test/* && parcel build '(src|tests)/**/*.test.ts' --dist-dir dist-test",
    "build": "yarn generate:version && parcel build src/index.html --public-url .",
    "deploy": "yarn build && gh-pages -d ./dist",
    "generate:version": "genversion src/version.gen.ts --es6",
    "postinstall": "yarn generate:version"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "genversion": "^3.0.2",
    "gh-pages": "^3.2.3",
    "jasmine-core": "^4.0.1",
    "karma": "^6.3.16",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-spec-reporter": "^0.0.33",
    "nodemon": "^2.0.15",
    "parcel": "^2.1.1",
    "puppeteer": "^13.4.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/search": "^0.19.8",
    "@codemirror/state": "^0.19.9",
    "@codemirror/stream-parser": "^0.19.3",
    "@codemirror/text": "^0.19.5",
    "@codemirror/view": "^0.19.45",
    "@replit/codemirror-vim": "^0.19.0",
    "@types/jasmine": "^3.10.3"
  }
}
